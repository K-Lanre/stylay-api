# Server Configuration
NODE_ENV=development
PORT=3000

# Application Name
APP_NAME=Stylay

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=stylay_db
DB_USER=root
DB_PASSWORD=
DB_DIALECT=mysql

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_development_only
JWT_EXPIRES_IN=90d
JWT_COOKIE_EXPIRES_IN=90

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX=1000

# Security
CORS_ORIGIN=http://localhost:3001

# Logging
LOG_LEVEL=info

# Email Configuration (Development defaults)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=noreply@stylay.com
EMAIL_FROM_NAME=Stylay

# Frontend URLs
APP_URL=http://localhost:3001
FRONTEND_URL=http://localhost:5173
ADMIN_URL=http://localhost:3001/admin
VENDOR_PORTAL_URL=http://localhost:3001/vendor

# Support Email
SUPPORT_EMAIL=support@stylay.com

# Session Secret
SESSION_SECRET=development_session_secret_only

# Password Reset Token Expiration (in minutes)
PASSWORD_RESET_EXPIRES=30

# Default Passwords
DEFAULT_VENDOR_PASSWORD=Vendor@123
DEFAULT_CUSTOMER_PASSWORD=Customer@123
DEFAULT_ADMIN_PASSWORD=Admin@123
DEFAULT_SUBADMIN_PASSWORD=SecurePass123!

# Payment Configuration (Development placeholders)
PAYSTACK_SECRET_KEY=
PAYSTACK_PUBLIC_KEY=
PAYSTACK_BASE_URL=https://api.paystack.co
PAYSTACK_WEBHOOK_SECRET=
PAYSTACK_WEBHOOK_URL=http://localhost:3000/api/v1/webhooks/paystack
PAYSTACK_CALLBACK_URL=http://localhost:3000/api/v1/orders/verify

# Tunnel Configuration
TUNNEL_SUBDOMAIN=stylay-api
