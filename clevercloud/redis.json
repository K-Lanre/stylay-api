{
  "name": "stylay-redis",
  "type": "redis",
  "plan": "dev",
  "options": {
    "version": "6.2",
    "backup": true,
    "backupRetention": 7,
    "maxmemory": "256mb",
    "maxmemoryPolicy": "allkeys-lru"
  },
  "env": {
    "REDIS_ADDON_HOST": "redis-stylay.clever-cloud.com",
    "REDIS_ADDON_PORT": "6379",
    "REDIS_ADDON_PASSWORD": {
      "type": "secret",
      "description": "Redis password"
    }
  },
  "backup": {
    "enabled": true,
    "schedule": "0 3 * * *",
    "retention": 7,
    "timezone": "UTC"
  },
  "monitoring": {
    "enabled": true,
    "metrics": [
      "memory_usage",
      "connections",
      "commands",
      "keyspace"
    ]
  }
}