[
  {
    "name": "Database Backup",
    "command": "mysqldump -h $MYSQL_ADDON_HOST -P $MYSQL_ADDON_PORT -u $MYSQL_ADDON_USER -p$MYSQL_ADDON_PASSWORD $MYSQL_ADDON_DB > /tmp/backup_$(date +%Y%m%d_%H%M%S).sql",
    "schedule": "0 2 * * *",
    "timezone": "UTC",
    "enabled": true,
    "description": "Daily database backup at 2 AM UTC"
  },
  {
    "name": "Clean Old Cache",
    "command": "redis-cli -h $REDIS_ADDON_HOST -p $REDIS_ADDON_PORT -a $REDIS_ADDON_PASSWORD FLUSHDB",
    "schedule": "0 3 * * *",
    "timezone": "UTC",
    "enabled": true,
    "description": "Clean Redis cache daily at 3 AM UTC"
  },
  {
    "name": "Cleanup Old Files",
    "command": "find /app/public/Upload -type f -mtime +30 -delete",
    "schedule": "0 4 * * *",
    "timezone": "UTC",
    "enabled": true,
    "description": "Remove files older than 30 days from uploads"
  },
  {
    "name": "Health Check",
    "command": "curl -f http://localhost:8080/health || exit 1",
    "schedule": "*/10 * * * *",
    "timezone": "UTC",
    "enabled": true,
    "description": "Health check every 10 minutes"
  },
  {
    "name": "Clear Expired Tokens",
    "command": "node scripts/clear-expired-tokens.js",
    "schedule": "0 1 * * *",
    "timezone": "UTC",
    "enabled": true,
    "description": "Clear expired JWT tokens daily at 1 AM UTC"
  },
  {
    "name": "Generate Daily Reports",
    "command": "node scripts/generate-daily-reports.js",
    "schedule": "0 6 * * *",
    "timezone": "UTC",
    "enabled": true,
    "description": "Generate daily business reports at 6 AM UTC"
  }
]