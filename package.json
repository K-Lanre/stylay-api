{
  "name": "stylay-api",
  "version": "1.0.0",
  "description": "Stylay E-commerce API - Multi-vendor e-commerce platform",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest --watchAll --verbose --coverage",
    "lint": "eslint . --ext .js",
    "format": "prettier --write \"**/*.js\"",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo",
    "migrate:undo:all": "npx sequelize-cli db:migrate:undo:all",
    "seed": "npx sequelize-cli db:seed:all",
    "seed:file": "npx sequelize-cli db:seed --seed",
    "seed:undo": "npx sequelize-cli db:seed:undo",
    "seed:undo:all": "npx sequelize-cli db:seed:undo:all",
    "setup": "npx sequelize-cli db:create && npx sequelize-cli db:migrate",
    "reset": "npx sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate",
    "tunnel": "node tunnel.js",
    "tunnel:start": "nodemon tunnel.js start",
    "tunnel:stop": "nodemon tunnel.js stop",
    "tunnel:dev": "concurrently \"npm run dev\" \"npm run tunnel:start\"",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:dev": "pm2 start ecosystem.config.js --env development",
    "pm2:clevercloud": "pm2 start ecosystem.config.js --env clevercloud",
    "pm2:stop": "pm2 stop all",
    "pm2:delete": "pm2 delete all",
    "clevercloud:setup": "npm run migrate && npm run seed",
    "clevercloud:postdeploy": "npm run migrate && pm2 restart stylay-api"
  },
  "dependencies": {
    "aws-sdk": "^2.1455.0",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "clamscan": "^2.4.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.9",
    "express": "^4.21.2",
    "express-fileupload": "^1.5.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.1",
    "helmet": "^6.2.0",
    "hpp": "^0.2.3",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^9.0.0",
    "libphonenumber-js": "^1.12.29",
    "morgan": "^1.10.0",
    "mysql2": "^3.15.3",
    "nodemailer": "^7.0.5",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pm2": "^5.4.3",
    "prom-client": "^15.1.3",
    "redis": "^5.9.0",
    "sequelize": "^6.31.0",
    "slugify": "^1.6.6",
    "uuid": "^9.0.0",
    "winston": "^3.8.2",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "eslint": "^8.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "sequelize-cli": "^6.5.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "keywords": [
    "ecommerce",
    "api",
    "nodejs",
    "express",
    "sequelize",
    "mysql"
  ],
  "author": "Stylay Team",
  "license": "MIT"
}
